{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"ESNext",
    "lib": ["ES6", "es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "src"
  ]
}
